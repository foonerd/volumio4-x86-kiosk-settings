{
  "page": {
    "label": "TRANSLATE.DISPLAY_SETTINGS"
  },
  "sections": [
    {
      "id": "display",
      "element": "section",
      "label": "TRANSLATE.DISPLAY_SECTION",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/display_configuration",
        "method": "savescreensettings"
      },
      "saveButton": {
        "label": "TRANSLATE.APPLY",
        "data": [
          "rotatescreen",
          "brightness",
          "touch_offset",
          "pointer_offset",
          "fbcon_offset",
          "plymouth_offset",
          "hidecursor",
          "screensavertype",
          "timeout",
          "noifplay"
        ]
      },
      "content": [
        {
          "id": "rotatescreen",
          "element": "select",
          "doc": "TRANSLATE.DISPLAY_ROT_DOC",
          "label": "TRANSLATE.DISPLAY_ROT",
          "value": {
            "value": "normal",
            "label": "Normal"
          },
          "options": [
            {
              "value": "normal",
              "label": "TRANSLATE.NORMAL"
            },
            {
              "value": "left",
              "label": "TRANSLATE.LEFT"
            },
            {
              "value": "right",
              "label": "TRANSLATE.RIGHT"
            },
            {
              "value": "inverted",
              "label": "TRANSLATE.INVERTED"
            }
          ]
        },
        {
          "id": "brightness",
          "element": "equalizer",
          "label": "TRANSLATE.BRIGHTNESS",
          "doc": "TRANSLATE.BRIGHTNESS",
          "config": {
            "orientation": "horizontal",
            "bars": [
              {
                "min": "0",
                "max": "1",
                "step": "0.10",
                "value": "1"
              }
            ]
          }
        },
        {
          "id": "touch_offset",
          "element": "select",
          "doc": "TRANSLATE.TOUCH_OFFSET_DOC",
          "label": "TRANSLATE.TOUCH_OFFSET",
          "value": {
            "value": "0",
            "label": "None"
          },
          "options": [
            {
              "value": "0",
              "label": "TRANSLATE.ROT_NONE"
            },
            {
              "value": "90",
              "label": "TRANSLATE.ROT_90CW"
            },
            {
              "value": "180",
              "label": "TRANSLATE.ROT_180"
            },
            {
              "value": "270",
              "label": "TRANSLATE.ROT_90CCW"
            }
          ]
        },
        {
          "id": "pointer_offset",
          "element": "select",
          "doc": "TRANSLATE.POINTER_OFFSET_DOC",
          "label": "TRANSLATE.POINTER_OFFSET",
          "value": {
            "value": "0",
            "label": "None"
          },
          "options": [
            {
              "value": "0",
              "label": "TRANSLATE.ROT_NONE"
            },
            {
              "value": "90",
              "label": "TRANSLATE.ROT_90CW"
            },
            {
              "value": "180",
              "label": "TRANSLATE.ROT_180"
            },
            {
              "value": "270",
              "label": "TRANSLATE.ROT_90CCW"
            }
          ]
        },
        {
          "id": "fbcon_offset",
          "element": "select",
          "doc": "TRANSLATE.FBCON_OFFSET_DOC",
          "label": "TRANSLATE.FBCON_OFFSET",
          "value": {
            "value": "same",
            "label": "Same as Display"
          },
          "options": [
            {
              "value": "same",
              "label": "TRANSLATE.SAME_AS_DISPLAY"
            },
            {
              "value": "0",
              "label": "TRANSLATE.ROT_NONE"
            },
            {
              "value": "90",
              "label": "TRANSLATE.ROT_90CW"
            },
            {
              "value": "180",
              "label": "TRANSLATE.ROT_180"
            },
            {
              "value": "270",
              "label": "TRANSLATE.ROT_90CCW"
            }
          ]
        },
        {
          "id": "plymouth_offset",
          "element": "select",
          "doc": "TRANSLATE.PLYMOUTH_OFFSET_DOC",
          "label": "TRANSLATE.PLYMOUTH_OFFSET",
          "value": {
            "value": "same",
            "label": "Same as Display"
          },
          "options": [
            {
              "value": "same",
              "label": "TRANSLATE.SAME_AS_DISPLAY"
            },
            {
              "value": "0",
              "label": "TRANSLATE.ROT_NONE"
            },
            {
              "value": "90",
              "label": "TRANSLATE.ROT_90CW"
            },
            {
              "value": "180",
              "label": "TRANSLATE.ROT_180"
            },
            {
              "value": "270",
              "label": "TRANSLATE.ROT_90CCW"
            }
          ]
        },
        {
          "id": "hidecursor",
          "element": "switch",
          "label": "TRANSLATE.MOUSE_C",
          "doc": "TRANSLATE.MOUSE_C_DOC",
          "value": false
        },
        {
          "id": "screensavertype",
          "element": "select",
          "doc": "TRANSLATE.XSTYPE_DOC",
          "label": "TRANSLATE.XSTYPE",
          "value": {
            "value": "dpms",
            "label": "Turn the screen off"
          },
          "options": [
            {
              "value": "dpms",
              "label": "TRANSLATE.DPMS"
            },
            {
              "value": "xscreensaver",
              "label": "TRANSLATE.XSCREENSAVER"
            }
          ]
        },
        {
          "id": "xscreensettings",
          "element": "button",
          "label": "TRANSLATE.XSCREEN_SAVER_SETTING",
          "onClick": {
            "type": "plugin",
            "endpoint": "user_interface/display_configuration",
            "method": "xscreensettings"
          },
          "visibleIf": {
            "field": "screensavertype",
            "value": "xscreensaver"
          }
        },
        {
          "id": "timeout",
          "element": "input",
          "type": "number",
          "doc": "TRANSLATE.SCREENSAVER_DOC",
          "label": "TRANSLATE.SCREENSAVER",
          "attributes": [
            {
              "placeholder": 120
            },
            {
              "maxlength": 4
            },
            {
              "min": 0
            },
            {
              "max": 3600
            }
          ],
          "value": 120,
          "visibleIf": {
            "field": "screensavertype",
            "value": "dpms"
          }
        },
        {
          "id": "noifplay",
          "element": "switch",
          "label": "TRANSLATE.NO_SS_IF_PLAY",
          "doc": "TRANSLATE.NO_SS_IF_PLAY_DOC",
          "value": true
        }
      ]
    },
    {
      "id": "debug",
      "element": "section",
      "label": "TRANSLATE.DEBUG_SECTION",
      "content": [
        {
          "id": "generate_diagnostics",
          "element": "button",
          "label": "TRANSLATE.GENERATE_DIAG",
          "doc": "TRANSLATE.GENERATE_DIAG_DOC",
          "onClick": {
            "type": "plugin",
            "endpoint": "user_interface/display_configuration",
            "method": "generateDiagnostics"
          }
        }
      ]
    }
  ]
}
